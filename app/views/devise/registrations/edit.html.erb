<div class="pl-5">
<h2 class="h1-responsive font-weight-bold my-5">Editer tes informations de compte</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(laisse vide si tu ne souhaites pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div><br />

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br />

  <div class="field">
    <%= f.label :current_password %> <i>(nous avons besoin de ton mot de passe actuel pour confirmer tes changements)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div><br />

  <div class="actions">
    <%= f.submit "Editer" %>
  </div><br />
<% end %>

<h2 class="h1-responsive font-weight-bold my-5">Supprimer le compte</h2>

<p>Ce site ne t'a pas satisfait? <br><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<br><%= link_to "Retour", :back %>

</div><br><br>
