<h2 class="h1-responsive font-weight-bold my-5">Bienvenue sur la page de l'event n°<%= @event.id %></h2>

   <div class="my-3 p-3 bg-white rounded box-shadow text-success">


       <div class="media text-dark pt-3">
         <p class="media-body pb-3 mb-0 medium lh-125 border-bottom border-gray">
           <strong class="d-block text-gray-dark">TITRE</strong>
           <%= @event.title%>
         </p>
       </div>

       <div class="media text-dark pt-3">
         <p class="media-body pb-3 mb-0 medium lh-125 border-bottom border-gray">
           <strong class="d-block text-gray-dark">DESCRIPTION</strong>
           <%= @event.description%>
         </p>
       </div>

       <div class="media text-dark pt-3">
         <p class="media-body pb-3 mb-0 medium lh-125 border-bottom border-gray">
           <strong class="d-block text-gray-dark">DATE</strong>
             <a> <%= @event.start_date %> </a>
         </p>
       </div>

        <div class="media text-dark pt-3">
         <p class="media-body pb-3 mb-0 medium lh-125 border-bottom border-gray">
           <strong class="d-block text-gray-dark">DUREE</strong>
           <a> <%= @event.duration %> minutes </a>
         </p>
       </div>

        <div class="media text-dark pt-3">
         <p class="media-body pb-3 mb-0 medium lh-125 border-bottom border-gray">
           <strong class="d-block text-gray-dark">PRICE</strong>
           <a> <%= @event.price %>€ </a>
         </p>
       </div>

        <div class="media text-dark pt-3">
         <p class="media-body pb-3 mb-0 medium lh-125 border-bottom border-gray">
           <strong class="d-block text-gray-dark">LOCATION</strong>
           <a> <%= @event.location %> </a>
         </p>
       </div>

       <div class="media text-dark pt-3">
         <p class="media-body pb-3 mb-0 medium lh-125 border-bottom border-gray">
           <strong class="d-block text-gray-dark">ORGANISATEUR</strong>
           <a> XXX </a>
         </p>
       </div>

     </div>
