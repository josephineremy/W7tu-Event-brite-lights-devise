<h2 class="h1-responsive font-weight-bold my-5 pl-5">Page de création d'un nouvel événement</h2>


<body>

   <div class=" border border-light p-5">

        <% if flash[:danger] %>
          <div class="alert alert-danger" role="alert"><%= flash[:danger] %></div>
        <% end %>


     <p class="h4 mb-4">Pour créer un nouvel événement, remplissez le formulaire ci-dessous :</p>

        <%= form_tag url_for(action: 'create'), method: "post" do %>

        <p><%= label_tag 'Date de début :' %></p>
        <%= text_field_tag 'start_date', nil, class: "form-control mb-4" %>

        <p><%= label_tag 'Durée :' %></p>
        <%= text_field_tag 'duration', nil,  class: "form-control mb-2"%>

        <p><%= label_tag 'Titre :' %></p>
        <%= text_field_tag 'title', nil,  class: "form-control mb-2"%>

        <p><%= label_tag 'Description :' %></p>
        <%= text_field_tag 'description', nil,  class: "form-control mb-2"%>

        <p><%= label_tag 'Prix :' %></p>
        <%= text_field_tag 'price', nil,  class: "form-control mb-2"%>

        <p><%= label_tag 'Ville :' %></p>
        <%= text_field_tag 'location', nil,  class: "form-control mb-2"%>

            </br>

        <%= submit_tag "Créer l'évent", class: "btn btn-info btn-block" %>

      <% end %>
    </div>


</body>
