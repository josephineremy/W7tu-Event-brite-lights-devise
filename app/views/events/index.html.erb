<div class = "jumbotron"style="background-image: url(https://images.pexels.com/photos/3536252/pexels-photo-3536252.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940)">
<div class="pl-5" style="height: 300px;">
  <h1 class="display-3" style="color:white">Bienvenue sur Event Brite Light</h1>
		<h4 class="lead" style="color:white">Le site de réservation de tes plus folles soirées !</h4>
		<br>
			<h6 style="color:white">Si tu es organisateur d'événements, tu peux en créer un <a> <%= link_to "ici !", new_event_path %> </a> </h6>
</div>


 <% if flash[:success] %>
      <div class="alert alert-success" role="alert"><%= flash[:success] %></div>
 <% elsif flash[:danger] %>
      <div class="alert alert-danger" role="alert"><%= flash[:danger] %></div>
   <% end %>

    <h4 class="h1-responsive font-weight-bold my-5 pl-5">Quelques événements dans ta ville...</h4>


<section>

<div class="card-deck">
<%Event.all.each do |event|%>
<div class="col-sm-4 mb-3">
<div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
  <div class="card-header h4">
    <%=event.title%>
  </div>
  <div class="card-body align-center">
      <p><%=event.start_date%></p>
      <p><%=event.location%></p>
      <footer class="blockquote-footer">
      <div class="row justify-content-between align-self-center mx-3">
        <p><%=event.price%> €</p>
        <a class="btn btn-outline-secondary" <%= link_to "Voir plus", event_path(event.id)%></a>
      </div>
      </footer>
  </div>
</div>
</div>
<%end%>
</div>
</section>
